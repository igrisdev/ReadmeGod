---
import AllSections from '@components/general/AllSections.astro'
import Input from '@components/general/Input.astro'
import Titles from '@components/general/Titles.astro'
---

<AllSections>
  <Titles
    slot='title'
    title='Title'
  />

  <div
    slot='info'
    class='flex gap-6'
  >
    <Input
      type='text'
      id='introduction-title-auto'
      value='Soy un.. '
      className='w-40'
    />

    <Input
      type='text'
      id='introduction-title'
      placeholder='Name'
    />
  </div>
</AllSections>
